    <td class="DtlBarTitle">楼层:<font color ="red">*</font></td>
    <td class="listtd"><input type="text" NAME="floorno" maxlength="32" class="JQText JQMust" value="<HDPrint Value=#floorno# Replace=#DBField2Input#>"></td>
  </tr>
