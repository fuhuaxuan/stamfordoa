    <td class="DtlBarTitle">面积:<font color ="red">*</font></td>
    <td class="listtd"><input type="text" NAME="farea" maxlength="16" class="JQFloat JQMust" value="<HDPrint Value=#farea# Replace=#DBField2Input#>"></td>
    <td class="DtlBarTitle">建筑面积:<font color ="red">*</font></td>
    <td class="listtd"><input type="text" NAME="Jarea" maxlength="16" class="JQFloat JQMust" value="<HDPrint Value=#Jarea# Replace=#DBField2Input#>"></td>
